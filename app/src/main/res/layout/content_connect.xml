<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.google.counselling.Connect"
    tools:showIn="@layout/app_bar_connect">

    <TextView
        android:id="@+id/mailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="#80000000"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:text="@string/mail"
        android:textColor="#FFF"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/callTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:background="#80000000"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:text="@string/call"
        android:textColor="#FFF"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mailTextView" />

    <TextView
        android:id="@+id/chatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:background="#80000000"
        android:paddingBottom="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:text="@string/chat"
        android:textColor="#FFF"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/callTextView" />

    <ImageView
        android:id="@+id/mailImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#80000000"
        android:paddingBottom="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="48dp"
        android:paddingTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/mailTextView"
        app:layout_constraintLeft_toRightOf="@+id/mailTextView"
        app:layout_constraintTop_toTopOf="@+id/mailTextView"
        app:srcCompat="@mipmap/ic_email_white_36dp" />

    <ImageView
        android:id="@+id/callimageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#80000000"
        android:paddingLeft="5dp"
        android:paddingRight="96dp"
        app:layout_constraintBottom_toBottomOf="@+id/callTextView"
        app:layout_constraintLeft_toRightOf="@+id/callTextView"
        app:layout_constraintTop_toTopOf="@+id/callTextView"
        app:srcCompat="@mipmap/ic_call_white_36dp" />

    <ImageView
        android:id="@+id/chatImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#80000000"
        android:paddingBottom="18dp"
        android:paddingLeft="5dp"
        android:paddingRight="40dp"
        android:paddingTop="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/chatTextView"
        app:layout_constraintLeft_toRightOf="@+id/chatTextView"
        app:layout_constraintTop_toTopOf="@+id/chatTextView"
        app:srcCompat="@mipmap/ic_chat_white_36dp" />

</android.support.constraint.ConstraintLayout>
